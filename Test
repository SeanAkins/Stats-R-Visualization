ggplot(diamonds) +
  geom_point(aes(x = cut, y = price))


#2 
ggplot(diamonds) +
  geom_point(aes(x = carat, y = price))

ggplot(diamonds) +
  geom_point(aes(x = color, y = price))

ggplot(diamonds) +
  geom_point(aes(x = carat, y = price, colour=color))

ggplot(diamonds) +
  geom_point(aes(x = color, y = price, colour=carat))

ggplot(diamonds) + 
   geom_bar(aes(x = cut))

#3
ggplot(diamonds) +
  geom_point(aes(x = carat, y = cut, colour=color, alpha=, size=0.4, shape=))


