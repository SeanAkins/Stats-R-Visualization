ggplot(diamonds, aes(x=cut, fill=clarity)) +
  geom_bar(aes(position = "dodge"))

ggplot(diamonds, aes(x=cut, fill=clarity)) +
  geom_bar(aes(position = "dodge"))

#6 
ggplot(diamonds, aes(x=price, fill=cut)) +
  geom_bar(aes(position = "dodge") +
  stat_bin(binwidth = 2/30)
